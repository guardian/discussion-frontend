{
  "name": "guardian-discussion-frontend",
  "projectName": "Discussion::discussion-frontend",
  "description": "Standalone UI for Guardian comments",
  "version": "1.5.0",
  "license": "Apache-2.0",
  "repository": "https://github.com/guardian/discussion-frontend",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf tmp && mkdir -p tmp && rm -rf dist",
    "compile": "rollup -c rollup.config.react.amd.js && rollup -c rollup.config.preact.amd.js",
    "hash": "node bin/hash.js",
    "deploy": "node bin/riffraff.js",
    "lint": "eslint src test && stylelint 'src/**/*.css'",
    "example": "node example/server.js",
    "prebuild": "npm run clean",
    "build": "npm run compile && npm run hash",
    "predeploy": "npm run build",
    "pretest": "npm run clean",
    "posttest": "npm run lint",
    "prepublish": "npm test && npm run build",
    "start": "npm run example"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.9",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "eslint": "^3.6.1",
    "eslint-plugin-react": "^6.3.0",
    "express": "^4.14.0",
    "is-file": "^1.0.0",
    "jsdom": "9.8.3",
    "junk": "^2.0.0",
    "mkdirp": "^0.5.1",
    "node-riffraff-artefact": "^1.8.0",
    "postcss-calc": "^5.3.1",
    "postcss-modules": "^0.5.2",
    "postcss-scss": "^0.3.0",
    "precss": "^1.4.0",
    "rollup": "^0.36.0",
    "rollup-plugin-alias": "^1.2.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^4.1.0",
    "rollup-plugin-inject": "^2.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-postcss": "^0.2.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-string": "^2.0.2",
    "stylelint": "^7.3.1",
    "stylelint-config-standard": "^14.0.0",
    "uglify-js": "2.7.3"
  },
  "dependencies": {
    "intersection-observer": "0.1.1",
    "preact": "6.0.2",
    "preact-compat": "3.4.2",
    "react": "15.3.2",
    "react-dom": "15.3.2",
    "tiny-emitter": "1.1.0",
    "whatwg-fetch": "1.0.0"
  }
}
